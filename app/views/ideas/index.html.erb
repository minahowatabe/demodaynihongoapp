<h1 class="titles">Lesson Tips & Idea</h1>

<div class="table-responsive">
  <table class="table table-striped">
      
   <% if user_signed_in? %>  
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @ideas.each do |idea| %>
        <tr>
          <td><%= idea.title %></td>
          <td><%= idea.content %></td>
          <td><%= link_to 'Show', idea, class: 'btn btn-1' %></td>
        </tr>
      <% end %>
    </tbody>
   
   <% else %>
   <p> ログイン後、詳細ページに移ります。</p>
     <thead>
      <tr>
        <th>Title</th>
      </tr>
    </thead>
    
    <tbody>
      <% @ideas.each do |idea| %>
        <tr>
          <td><%= idea.title %></td>
        </tr>
     <% end %>
    </tbody>
   <% end %>
  </table>
</div>
