<div class="container_qa">
<div class="rowA qa">
 <div class="col-md-8 col-xs-10 panel panel-default qa">
	<div class="panel-heading">
   質問
  </div>
	<div class="panel-body">
   <h2><%= @question.title %></h2>
   <h4><%= @question.content %></h4>
  </div>
</div>
</div>
</div>

<div class="container_qa">
<div class="rowB qa">
<div class="col-md-8 col-xs-10 panel panel-default qa">
  <div class="panel-heading">
   回答する
  </div>
  <br>
<%= form_for @newanswer, :url => answer_path do |f| %>
  <p>お名前:<%= f.text_field :name, :size=>"15x2"  %></p>
  <p>回答：<%= f.text_area :body, :size=>"80x4" %></p>
  <%= f.hidden_field :question_id %>
  <%= f.submit ' ANSWER ', class:'btn-5 btn-sm' %>
<% end %>
</div>
</div>
</div>

<div class="container_qa">
<h2>みんなの回答</h2>

<% @answers.each_with_index do |answer , idx| %>
<div class="balloon1">
  <p>
    <%= idx + 1 %>. <%= answer.name %>さん : <%= answer.body %>
  </p>
  <p><%= link_to '[削除]', answer_path(@question.id), method: :delete, data: {confirm: "削除してもよろしいですか？"} %></p>
</div>

<% end %>
</div>

<div class ="linkbtn">
  <%= link_to "  index  ", questions_path, class: "btn btn-2" %>
</div>